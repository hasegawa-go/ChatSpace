.wrapper
  .side-bar
    .side__header
      %h3.header__name
        go
      %ul.side__icons
        %li.icon
          = link_to new_group_path do
            %i.fas.fa-edit
        %li.icon
          = link_to edit_user_path(current_user) do
            %i.fas.fa-cog
    .groups
      .group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              メッセージはまだありません。
  .chat
    .header
      .left-header
        .left-header__title
        = @group.name
        %ul.left-header__members
          %li.member
          Member：
          %li.member
          go
        = link_to edit_group_path(@group) do
          .right-header
            %input.right-header__edit_button{:type => "button", :value => "EDIT"}
    .messages.js-messages
      .messages
        = render @messages
    / .chat-main__footer
    /   %form.chat-main__footer__form
    /     %input.message{:placeholder => "type a message"}
    /     %label.upload-label{for: "insert-image"}
    /       %span.insert-image #{ fa_icon "image"}
    /       %input.submit{:type => "file", id: "insert-image"}
    /     %input.send_btn{:type => "submit", :value => "SEND"  }

    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
